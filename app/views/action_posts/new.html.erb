<h1>create new post</h1>
<%= form_for @action_post do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br><br>

<%= f.label :location %><br>
<%= f.text_field :location %><br><br>

<%= f.label :category_id %><br>
<%= f.collection_select :category_id, @categories, :id, :name %><br><br>

<%= f.label :content %><br>
<%= f.text_area :content %><br><br>

<%= f.label :img_url %><br>
<%= f.text_field :img_url %><br><br>

<%= f.submit %><br>

<% end %>