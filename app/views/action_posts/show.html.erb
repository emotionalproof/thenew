<style>
.center {
  margin: auto;
  width: 60%;
  border: 3px solid orange;
  padding: 10px;
  text-align: center;
}
.css-input {
     padding: 28px;
     font-size: 50px;
     border-width: 1px;
     border-color: #cccccc;
     background-color: #ffa500;
     color: #ffffff;
     border-style: dotted;
     border-radius: 27px;
     box-shadow: -4px 5px 7px rgba(66,66,66,.54);
     text-shadow: 0px 0px 5px rgba(66,66,66,.75);
     text-align: center;
     
}
 .css-input:focus {
     outline:none;
</style>

<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:10px">

<div class="css-input"><%= @action_post.title.titleize %></div>


<div>
<div class="image-overlay-container" id="show_img">
      <img src= <%= @action_post.img_url %> alt="post image" class="show-image" >
    </div>
    </div>
<div>Posted by <%= link_to @action_post.user.user_name.titleize, @action_post.user %></div><br><br>
<div class="location">Location: <%= @action_post.location.titleize %></div><br><br>
<div class="category">Action Category: <%= @action_post.category.name.titleize %>, <%= @action_post.category.tag.upcase %></div><br><br>
<p class="content"><%= @action_post.content %></p><br><br>


<% if @action_post.user.id != session[:user_id] %>
  <div></div>
<% else %>
<div><%= button_to "Edit Post", edit_action_post_path(@action_post), method: :get %></div>
<div><%= button_to 'Delete Post', action_post_path(@action_post), method: :delete %></div>
<%end %>
<br>
<div class="container-fluid" border-style="solid">
<h3>Comments</h3>	
<%= render partial: 'comments/form' %>	<br>
<%= render partial: 'action_posts/comment', collection: @action_post.comments.reverse %>
</div>



 
</div>