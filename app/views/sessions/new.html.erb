  
<h1>LOGIN Page</h1>

<% if flash[:error] %>
  <h1 styls='color: red;'><%= flash[:error] %></h1>
<% end %>

<%= form_for :session, url: login_path do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>
