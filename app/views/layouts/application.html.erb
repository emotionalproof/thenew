<body>

<!-- Sidebar (hidden by default) -->
<nav class="w3-sidebar w3-bar-block w3-card w3-top w3-large w3-animate-left custom-nav-bar" id="mySidebar">
  <a href="javascript:void(0)" onclick="w3_close()"
  class="w3-bar-item w3-button">Close Menu</a>
   <% if @current_user %>
  <p class="w3-bar-item w3-button">Hi <%=  @current_user.first_name %>!</p>  
  <p class="w3-bar-item w3-button">_______________</p>  
  <a href="/action_posts" onclick="w3_close()" class="w3-bar-item w3-button">Try Something New Today</a>
