  <a href="/conversations" onclick="w3_close()" class="w3-bar-item w3-button">Send a Message</a>  
  <a href="/sessions/logout" rel="nofollow" data-method="delete" onclick="w3_close()" class="w3-bar-item w3-button" >Logout</a> 
  <% else %>
  <a href="/sessions/new" onclick="w3_close()" class="w3-bar-item w3-button">Login</a>  
  <a href="/users/new" onclick="w3_close()" class="w3-bar-item w3-button">Signup</a>  
  <% end %>

</nav>


<!-- Top menu -->
<div class="w3-top custom-top">
  <div class="w3-white w3-xlarge" id="inner-custom-top">
    <div class="w3-button w3-padding-16 w3-left custom-nav-click" onclick="w3_open()">☰</div>
    <div class="w3-right w3-padding-5"><a href="/action_posts"><img src="https://i.ibb.co/SXcQ5KS/thenew.png" alt="thenew" id=logo > </a></div>


